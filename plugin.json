{
  "id": "nodebb-plugin-alter-content",
  "name": "NodeBB Alter posts",
  "description": "run a javascript codes on all existing post",
  "url": "https://github.com/sohrabafard/nodebb-plugin-alter-allContent",
  "library": "./index.js",
  "hooks": [
    { "hook": "filter:user.updateProfile", "method": "controlledUpdateProfile", "callbacked": true },
    { "hook": "action:post.save", "method": "savePost", "callbacked": true },
  ],
  "scripts": [
    "public/js/client.js",
    "public/js/admin.js"
  ],
  "staticDirs": {
    "styles": "public/styles",
    "js": "public/js"
  },
}